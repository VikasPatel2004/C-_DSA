#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    void getAllCombinations(vector<int> &candidates, int target, int i,
                            vector<int> &combin, vector<vector<int>> &ans) {
        // base cases
        if (target == 0) {
            ans.push_back(combin);
            return;
        }
        if (i == candidates.size() || target < 0) return;

        // include current element (reuse allowed)
        combin.push_back(candidates[i]);
        getAllCombinations(candidates, target - candidates[i], i, combin, ans);
        combin.pop_back();

        // exclude current element (move to next)
        getAllCombinations(candidates, target, i+1, combin, ans);
    }

    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        vector<vector<int>> ans;
        vector<int> combin;
        getAllCombinations(candidates, target, 0, combin, ans);
        return ans;
    }
};

int main() {
    Solution sol;
    vector<int> candidates = {2,3,6,7};
    int target = 7;

    vector<vector<int>> result = sol.combinationSum(candidates, target);

    cout << "Combinations that sum to " << target << ":\n";
    for (auto &comb : result) {
        cout << "[ ";
        for (int num : comb) cout << num << " ";
        cout << "]\n";
    }
    return 0;
}